<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_back"
    android:orientation="vertical"
    tools:context=".baidumap.BaiduMapActivity">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adapter 演示：获取经纬度，后台连续定位，跳转到第三方地图搜索路线，计算经纬度间的距离，检索地点附近建筑"/>

    <TextView
        android:id="@+id/once"
        style="@style/style_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:text="一次性定位"/>

    <TextView
        android:id="@+id/always"
        style="@style/style_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:text="连续定位"/>

    <TextView
        android:id="@+id/jumpBaidu"
        style="@style/style_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:text="跳转百度路线"/>

    <TextView
        android:id="@+id/jumpGaode"
        style="@style/style_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:text="跳转高德路线"/>

    <TextView
        android:id="@+id/jumpTenxun"
        style="@style/style_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:text="跳转腾讯路线"/>

    <TextView
        android:id="@+id/poi"
        style="@style/style_tv"
        android:layout_marginTop="@dimen/dp_10"
        android:text="检索附近建筑"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"/>

</LinearLayout>